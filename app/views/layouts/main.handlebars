        .todo-item {
            display: flex;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
        .todo-item form {
            margin: 0 5px;
        }
        .completed {
            text-decoration: line-through;
            color: #888;
        }
    </style>
</head>
